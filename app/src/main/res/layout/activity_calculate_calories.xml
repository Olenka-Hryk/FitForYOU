<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fon_calc_calories"
    tools:context="com.example.olenka.fitforyou.CalculateCalories">

    <TextView
        android:text="G R O W T H"
        android:id="@+id/tvGrowth"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="50dp"
        android:layout_weight="1"
        android:background="@color/fbutton_color_silver"
        android:fontFamily="casual"
        android:gravity="center_vertical|center_horizontal"
        android:textColor="@android:color/black"
        android:textSize="27dp"
        android:alpha="0.9"
        />

    <EditText
        android:id="@+id/etGrowth"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvGrowth"
        android:layout_centerHorizontal="true"
        android:ems="10"
        android:gravity="center_vertical|center_horizontal"
        android:inputType="number"
        android:textColor="@color/fbutton_color_alizarin"
        android:textSize="40dp"
        android:textStyle="bold|italic" />

    <TextView
        android:text="W E I G H T"
        android:id="@+id/tvWeight"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="170dp"
        android:layout_weight="1"
        android:background="@color/fbutton_color_silver"
        android:fontFamily="casual"
        android:gravity="center_vertical|center_horizontal"
        android:textColor="@android:color/black"
        android:textSize="27dp"
        android:alpha="0.9"
        />

    <EditText
        android:id="@+id/etWeight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/etGrowth"
        android:layout_alignStart="@+id/etGrowth"
        android:layout_below="@+id/tvWeight"
        android:ems="10"
        android:gravity="center_vertical|center_horizontal"
        android:inputType="number"
        android:textColor="@color/fbutton_color_alizarin"
        android:textSize="40dp"
        android:textStyle="bold|italic" />


    <TextView
        android:text="A G E"
        android:id="@+id/tvAge"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="290dp"
        android:layout_weight="1"
        android:background="@color/fbutton_color_silver"
        android:fontFamily="casual"
        android:gravity="center_vertical|center_horizontal"
        android:textColor="@android:color/black"
        android:textSize="27dp"
        android:alpha="0.9"
        />


    <EditText
        android:id="@+id/etAge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/etWeight"
        android:layout_alignStart="@+id/etWeight"
        android:layout_below="@+id/tvAge"
        android:ems="10"
        android:gravity="center_vertical|center_horizontal"
        android:inputType="number"
        android:textColor="@color/fbutton_color_alizarin"
        android:textSize="40dp"
        android:textStyle="bold|italic" />

    <Button
        android:layout_alignParentBottom="true"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="15dp"
        android:id="@+id/btnCalculate"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="Calculate"
        android:textSize="24dp"
        android:textColor="@android:color/black"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="4dp"
        android:layout_width="match_parent"
        android:background="@color/colorPrimary"
        />

    <TextView
        android:id="@+id/calories"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/btnCalculate"
        android:layout_centerHorizontal="true"
        android:fontFamily="casual"
        android:text="calories..."
        android:textColor="@color/colorPrimaryDark"
        android:textSize="50sp"
        android:textStyle="bold"
        />

</RelativeLayout>
