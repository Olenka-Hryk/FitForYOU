<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fon_calendar"
    tools:context="com.example.olenka.fitforyou.Calendar">

    <com.prolificinteractive.materialcalendarview.MaterialCalendarView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/calendar"
        android:background="@color/fbutton_color_clouds"
        android:alpha="0.85"
        app:mcv_showOtherDates="all"
        app:mcv_selectionColor="@color/indigo">
    </com.prolificinteractive.materialcalendarview.MaterialCalendarView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:layout_below="@+id/calendar"
        android:orientation="horizontal"
        android:weightSum="10">

        <ImageView
            android:layout_width="1dp"
            android:layout_height="90dp"
            android:src="@drawable/e57373_color"
            android:layout_weight="4"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Workout done"
            android:layout_gravity="center_horizontal|center_vertical"
            android:layout_weight="9"
            android:layout_marginLeft="10dp"
            android:textSize="24dp"/>
    </LinearLayout>

</RelativeLayout>
